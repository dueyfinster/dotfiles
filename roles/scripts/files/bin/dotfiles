#!/usr/bin/env bash
script_dir="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
dotfiles_dir="$(dirname "$script_dir")"

for entry in "$dotfiles_dir"/.*
do
	if [[ -f "$entry" || -d "$entry" ]]
	then
	  echo "Now linking ${entry##*/}"
	  ln -sf $entry $HOME/${entry##*/}
	fi
done
