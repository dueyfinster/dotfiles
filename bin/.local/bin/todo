#!/bin/bash
# A script to create org mode todo on command line
SED=sed

if [ "$(uname)" == "Darwin" ]; then
    SED=gsed
fi

if [ "$1" == "-w" ]; then
    shift
    $SED --in-place 's/^\(* Work .*\)$/\1\n** TODO '"$(echo ${@})"'/g' \
        "$HOME/org/gtd.org"
else
    $SED --in-place 's/^\(* Personal .*\)$/\1\n** TODO '"$(echo ${@})"'/g' \
        "$HOME/org/gtd.org"
fi
