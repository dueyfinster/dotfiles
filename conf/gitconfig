[user]
	name = Neil Grogan
[alias]
	a = add -A
	c = commit -m
	co = checkout
  gd = diff --staged
  f = fetch
  l = log
	last = log -1 HEAD
	change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ $`echo $VAR` = \\\"$OLD\\\" ]]; then export $VAR=\\\"$NEW\\\"; fi\" $@; }; f "
	reviewmaster = push origin HEAD:refs/for/master
  r = rebase
	s = status
	p = push
	pf = push --force
  pl = pull
	ctags = !.git/hooks/ctags
[push]
	default = simple
[pull]
	rebase = true
[status]
  short = true
[color]
	ui = auto
[grep]
	patternType = perl
[credential]
	helper = cache --timeout=3600
